<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>

    <!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.2/css/bootstrap.min.css" integrity="sha512-b2QcS5SsA8tZodcDtGRELiGv5SaKSk1vDHDaQRda0htPYWZ6046lr3kJ5bAAQdpV2mmA/4v0wQF9MyU6/pDIAg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<!-- Font Awesome CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />



    <style>
        body {
            background-color: #f8f9fa; /* Bootstrap default background color */
        }

        .container {
            margin-top: 50px;
        }

        h1 {
            text-align: center;
            color: #007bff; /* Bootstrap primary color */
        }

        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        th,
        td {
            padding: 10px;
            border: 1px solid #dee2e6; /* Bootstrap table border color */
        }

        th {
            background-color: #007bff; /* Bootstrap primary color */
            color: white;
        }

        tbody tr:nth-child(odd) {
            background-color: #f2f2f2; /* Alternate row background color */
        }

        a {
            color: #007bff; /* Bootstrap primary color */
        }

        /* Navbar styling */
        nav {
            background-color: #343a40; /* Bootstrap dark background color */
            padding: 10px 0;
        }

        nav a {
            color: white;
            margin-right: 15px;
        }

        /* Footer styling */
        footer {
            background-color: #343a40; /* Bootstrap dark background color */
            color: white;
            text-align: center;
            padding: 10px 0;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="#">My Cafe Home</a>
    </nav>

    <!-- Content -->
    <div class="container">
        <% if (message) { %>
            <div class="alert alert-<%=message.type%> fade show alert-dismissible" role="alert">
            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
            <strong><%=message.info%></strong>
            </div>
        <% } %>
        <h1>My Cafe Home</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Avg Rating</th>
                    <th>Total Ratings</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% let count = 1; %>
                <% for( let index = data.length-1; index >=0 && count<=5; index-- ) { %>
                <tr>
                    <td><%= count %><% count++; %></td>
                    <td><%= data[index].name %></td>
                    <td><%= data[index].phone %></td>
                    <td>
                        <% if (data[index].reviewCount==0) { %>
                        Not Yet Rated
                        <% } else { %>
                        <%= (data[index].reviewSum/data[index].reviewCount).toFixed(2) %>
                        <% } %>
                    </td>
                    <td><%= data[index].reviewCount %></td>
                    <td><a href="/rate/<%= data[index].id %>">Rate Now</a></td>
                </tr>
                <% } %>

            </tbody>
        </table>

        <a href="/add" class="btn btn-primary">Add A New Cafe</a>
    </div>

    <!-- Footer -->
    <footer>
        &copy; 2024 My Cafe Home
    </footer>

    <!-- Bootstrap JS and FontAwesome JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.2/js/bootstrap.bundle.min.js" integrity="sha512-X/YkDZyjTf4wyc2Vy16YGCPHwAY8rZJY+POgokZjQB2mhIRFJCckEGc6YyX9eNsPfn0PzThEuNs+uaomE5CO6A==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</body>

</html>
